{% extends 'ERPGameBundle::layout.html.twig' %}

{% block body %}
<div class="page-header">
      <h1>ProdutoItem</h1>
</div>

<div class="row-fluid">
         <p><strong>Id</strong>
            {{ entity.id }}
        </p>
         <p><strong>Dataentrada</strong>
            {{ entity.dataEntrada|date('d/m/Y') }}
        </p>
         <p><strong>Valorentrada</strong>
            {{ entity.valorEntrada }}
        </p>
         <p><strong>Quantidade</strong>
            {{ entity.quantidade }}
        </p>
         <p><strong>Saldo</strong>
            {{ entity.saldo }}
        </p>
         <p><strong>Flgconsolidado</strong>
            {{ entity.flgConsolidado }}
        </p></div>
 
	<div class="form-actions">
        <a class="btn" href="{{ path('produtoitem') }}">
            Voltar para Lista
        </a>
        <a class="btn btn-primary" href="{{ path('produtoitem_edit', { 'id': entity.id }) }}">
            Modificar
        </a>
        <form style="float:right" action="{{ path('produtoitem_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-danger">Remover</button>
        </form>
</div>{% endblock body %}