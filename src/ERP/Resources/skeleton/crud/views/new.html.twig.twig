{{ "{% extends 'ERPGameBundle::layout.html.twig' %}" }}

{{ '{% block body %}' }}
<div class="page-header">
    <h1>Cadastrar: {{ entity|lower }}</h1>
</div>

<form action="{{ "{{ path('"~ route_name_prefix ~"_create') }}" }}" class="form-horizontal" method="post" {{ "{{ form_enctype(form) }}" }}>
    {{ "{{ form_widget(form,{'form_type': 'horizontal'}) }}" }}
    <div class="control-group">
        <div class="controls">
                 <button type="submit" class="btn btn-primary">Criar</button>
        </div>
    </div>
</form>
{% set hide_edit = true %} 
{% set hide_delete = true %}
{% include 'views/others/record_actions.html.twig' %}
{{ '{% endblock body %}' }}