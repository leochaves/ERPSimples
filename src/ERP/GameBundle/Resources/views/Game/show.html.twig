{% extends 'ERPGameBundle::layout.html.twig' %}

{% block body -%}
    <h1>Game</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Releasedate</th>
                <td>{{ entity.releaseDate|date('d/m/Y') }}</td>
            </tr>
            <tr>
                <th>Imagens</th>
                <td>
                 {% for image in entity.images %}
                        <img class="img-rounded" src="{{ asset(image.WebPath) }}" width="150px" >                        
                 {% endfor %}   
                </td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('game') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('game_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('game_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
