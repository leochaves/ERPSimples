{% extends 'ERPGameBundle::layout.html.twig' %}

{% block body %}
<div class="page-header">
    <h1>Editar: pedido</h1>
</div>


<form action="{{ path('pedido_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} class="form-horizontal" novalidate="novalidate">
    <input type="hidden" name="_method" value="PUT" />
    {{ form_widget(edit_form,{'form_type': 'horizontal'}) }}
    <div class="control-group">
         <div class="controls">
                  <button type="submit" class="btn btn-primary">Editar</button>
         </div>
     </div>
</form>

 
	<div class="form-actions">
        <a class="btn" href="{{ path('pedido') }}">
            Voltar para Lista
        </a>
</div>{% endblock body %}