{% extends 'ERPGameBundle::layout.html.twig' %}

{% block body %}
<div class="page-header">
    <h1>Cadastrar: pedido</h1>
</div>

<form action="{{ path('pedido_create') }}" class="form-horizontal" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form,{'form_type': 'horizontal'}) }}
    <div class="control-group">
        <div class="controls">
                 <button type="submit" class="btn btn-primary">Criar</button>
        </div>
    </div>
</form>
 
	<div class="form-actions">
        <a class="btn" href="{{ path('pedido') }}">
            Voltar para Lista
        </a>
</div>{% endblock body %}