{% extends 'ERPGameBundle::layout.html.twig' %}

{% block body -%}
<h1>Image edit</h1>

<form action="{{ path('image_update', { 'id': entity.id }) }}" class="form-horizontal"  method="post" {{ form_enctype(edit_form) }}>
    <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form,{'form_type': 'horizontal'}) }}
    <div class="control-group">
        <div class="controls">
            <button type="submit">Editar</button>
        </div>
    </div>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('image') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('image_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
