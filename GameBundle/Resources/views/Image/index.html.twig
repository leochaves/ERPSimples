{% extends 'ERPGameBundle::layout.html.twig' %}

{% block body -%}
    <h1>Image list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Game</th>
                <th>Name</th>
                <th>Imagem</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('image_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.game }}</td>
                <td>{{ entity.name }}</td>
                <td><img src="{{ asset(entity.WebPath) }}" width="150px"></td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('image_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('image_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('image_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
